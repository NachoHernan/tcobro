<!--Notificaciones con diseño en web se incluye en layout -> partial name="_Notificacion" para su uso-->
<!--Enlace de web Sweetalert2-->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!--Tempdata = Se utilizan y se borran al momento de utilizarlos-->
@if (TempData["exitoso"] != null)
{
    <script>
        Swal.fire({
            position: 'top-end',
            icon: 'success',
            title: '@TempData["exitoso"]',
            showConfirmButton: false,
            timer: 2000 
        });
    </script>
}

@if (TempData["error"] != null)
{
    <script>
        Swal.fire({
            position: 'top-end',
            icon: 'error',
            title: '@TempData["error"]',
            showConfirmButton: false,
            timer: 2000
        });
    </script>
}